# CC: the compiler to be used
CC = gcc

# SRC: the .c files
SRC = main.c school.c

# OBJ: the .o files
OBJ = $(SRC:.c=.o)

# NAME: the name of the executable
NAME = school

# RM: the program to delete files
RM = rm -f
all: $(OBJ)
	$(CC) -g $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
